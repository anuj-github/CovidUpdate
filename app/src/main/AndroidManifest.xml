<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.graduateguy.covid">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".CovidApplication"
        android:allowBackup="false"
        android:icon="@drawable/covid"
        android:label="@string/app_name"
        android:roundIcon="@drawable/covid"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.graduateguy.covid.ui.activity.SummaryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".search.ui.SearchActivity"
            android:theme="@style/SearchTheme"
            android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>
    </application>

</manifest>